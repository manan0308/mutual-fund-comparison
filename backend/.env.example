# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mutual_fund_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/mutual_fund_db

# API Configuration
MF_API_BASE_URL=https://api.mfapi.in
API_REQUEST_TIMEOUT=30000

# Cache Configuration
CACHE_TTL_FUNDS=86400000
CACHE_TTL_NAV=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# External APIs (if needed)
# Add any additional API keys here